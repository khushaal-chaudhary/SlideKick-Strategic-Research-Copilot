# SlideKick API - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# Neo4j Configuration
# =============================================================================
NEO4J_URI=bolt://your-neo4j-host:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: ollama (default), groq, gemini, openai
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:7b

# Ollama server URL (default: localhost for Docker container)
OLLAMA_BASE_URL=http://localhost:11434

# Fallback provider (when primary fails/rate limited)
LLM_FALLBACK_PROVIDER=none
LLM_FALLBACK_MODEL=qwen2.5:7b

# Temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# =============================================================================
# LLM Provider API Keys
# =============================================================================
GROQ_API_KEY=your_groq_api_key
GOOGLE_API_KEY=your_google_api_key
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Web Search (Tavily)
# =============================================================================
TAVILY_API_KEY=your_tavily_api_key

# =============================================================================
# Financial Data (Alpha Vantage)
# =============================================================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_ITERATIONS=3
QUALITY_THRESHOLD=0.7
